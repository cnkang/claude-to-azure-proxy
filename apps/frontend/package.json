{
  "name": "@repo/frontend",
  "version": "2.0.0",
  "description": "React frontend for Claude-to-Azure OpenAI proxy service",
  "type": "module",
  "scripts": {
    "build": "vite build",
    "build:clean": "rm -rf dist && pnpm run build",
    "build:prod": "NODE_ENV=production vite build --mode production",
    "build:prod:optimized": "NODE_ENV=production VITE_BUILD_ANALYZE=true vite build --mode production",
    "build:prod:cdn": "NODE_ENV=production VITE_CDN_URL=${CDN_URL:-} vite build --mode production",
    "build:analyze": "NODE_ENV=production vite build --mode production && npx vite-bundle-analyzer dist/stats.html",
    "build:security-scan": "pnpm audit --audit-level moderate && pnpm run security:scan && pnpm run build:prod",
    "build:docker": "NODE_ENV=production vite build --mode production --outDir dist-docker",
    "build:cdn": "NODE_ENV=production VITE_CDN_URL=${CDN_URL} vite build --mode production",
    "build:staging": "NODE_ENV=production vite build --mode staging",
    "build:production": "NODE_ENV=production vite build --mode production --minify terser",
    "dev": "vite",
    "preview": "vite preview",
    "preview:prod": "vite preview --mode production",
    "test": "vitest",
    "test:watch": "vitest",
    "test:coverage": "vitest --coverage",
    "test:ui": "vitest --ui",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "type-check": "tsc --noEmit",
    "format": "prettier --write src/",
    "format:check": "prettier --check src/",
    "security:audit": "pnpm audit --audit-level moderate",
    "security:scan": "pnpm dlx @cyclonedx/cyclonedx-npm --output-file sbom.json"
  },
  "dependencies": {
    "@repo/shared-types": "workspace:*",
    "@repo/shared-utils": "workspace:*",
    "i18next": "^25.6.1",
    "i18next-browser-languagedetector": "^8.2.0",
    "prismjs": "^1.30.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-i18next": "^16.2.4",
    "react-router-dom": "^7.9.5",
    "react-window": "^2.2.3"
  },
  "devDependencies": {
    "@axe-core/react": "^4.11.0",
    "@repo/shared-config": "workspace:*",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^24.10.0",
    "@types/prismjs": "^1.26.5",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@vitejs/plugin-react": "^5.1.0",
    "@vitejs/plugin-react-swc": "^4.2.1",
    "@vitest/coverage-v8": "^4.0.7",
    "@vitest/ui": "^4.0.7",
    "autoprefixer": "^10.4.21",
    "axe-core": "^4.11.0",
    "babel-plugin-react-remove-properties": "^0.3.1",
    "cssnano": "^7.1.2",
    "happy-dom": "^20.0.10",
    "object.entries": "^1.1.9",
    "object.fromentries": "^2.0.8",
    "postcss": "^8.5.6",
    "terser": "^5.44.1",
    "typescript": "^5.9.3",
    "vite": "^7.2.1",
    "vitest": "^4.0.7"
  },
  "sideEffects": [
    "*.css",
    "*.scss",
    "src/i18n/**/*",
    "src/main.tsx"
  ],
  "engines": {
    "node": ">=24.0.0"
  },
  "packageManager": "pnpm@10.20.0"
}
