{
  "name": "claude-to-azure-proxy",
  "version": "2.0.0",
  "description": "API proxy server that translates Claude API requests to Azure OpenAI format with web frontend",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "pnpm -r build",
    "build:backend": "pnpm --filter @repo/backend build",
    "build:frontend": "pnpm --filter @repo/frontend build",
    "build:shared": "pnpm --filter '@repo/shared-*' build",
    "build:clean": "pnpm -r build:clean",
    "start": "pnpm --filter @repo/backend start",
    "start:prod": "pnpm --filter @repo/backend start:prod",
    "start:optimized": "pnpm --filter @repo/backend start:optimized",
    "dev": "pnpm --filter @repo/backend dev",
    "dev:debug": "pnpm --filter @repo/backend dev:debug",
    "dev:frontend": "pnpm --filter @repo/frontend dev",
    "dev:all": "concurrently \"pnpm dev\" \"pnpm dev:frontend\"",
    "test": "pnpm -r test",
    "test:backend": "pnpm --filter @repo/backend test",
    "test:frontend": "pnpm --filter @repo/frontend test",
    "test:shared": "pnpm --filter '@repo/shared-*' test",
    "test:watch": "pnpm -r test:watch",
    "test:coverage": "pnpm -r test:coverage",
    "test:ui": "pnpm --filter @repo/backend test:ui",
    "test:node24": "pnpm --filter @repo/backend test:node24",
    "test:performance": "pnpm --filter @repo/backend test:performance",
    "test:memory": "pnpm --filter @repo/backend test:memory",
    "test:benchmark": "pnpm --filter @repo/backend test:benchmark",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:chromium": "playwright test --project=chromium",
    "test:e2e:firefox": "playwright test --project=firefox",
    "test:e2e:webkit": "playwright test --project=webkit",
    "test:e2e:report": "playwright show-report",
    "test:e2e:ui": "playwright test --ui",
    "playwright:install": "playwright install --with-deps",
    "lint": "pnpm -r lint",
    "lint:backend": "pnpm --filter @repo/backend lint",
    "lint:frontend": "pnpm --filter @repo/frontend lint",
    "lint:shared": "pnpm --filter '@repo/shared-*' lint",
    "lint:fix": "pnpm -r lint:fix",
    "type-check": "pnpm -r type-check",
    "type-check:backend": "pnpm --filter @repo/backend type-check",
    "type-check:watch": "pnpm --filter @repo/backend type-check:watch",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "docker:build": "docker build -t claude-to-azure-proxy .",
    "docker:build:backend": "docker build -f apps/backend/Dockerfile -t claude-to-azure-proxy:backend .",
    "docker:build:frontend": "docker build -f apps/frontend/Dockerfile -t claude-to-azure-proxy:frontend .",
    "docker:build:dev": "docker build --target builder -t claude-to-azure-proxy:dev .",
    "docker:build:all": "pnpm run docker:build:backend && pnpm run docker:build:frontend",
    "docker:build:production": "./scripts/build/build-production.sh",
    "docker:build:staging": "BUILD_TARGET=staging ./scripts/build/build-production.sh",
    "docker:build:cdn": "CDN_URL=${CDN_URL} ./scripts/build/build-production.sh",
    "docker:run": "docker run --init -p 8080:8080 --env-file .env claude-to-azure-proxy",
    "docker:run:backend": "docker run --init -p 8080:8080 --env-file .env claude-to-azure-proxy:backend",
    "docker:run:frontend": "docker run --init -p 3000:80 claude-to-azure-proxy:frontend",
    "docker:run:dev": "docker run --init -p 8080:8080 --env-file .env claude-to-azure-proxy:dev",
    "docker:compose:up": "docker-compose up -d",
    "docker:compose:down": "docker-compose down",
    "docker:compose:prod": "docker-compose -f docker-compose.prod.yml up -d",
    "docker:compose:prod:down": "docker-compose -f docker-compose.prod.yml down",
    "docker:validate": "./scripts/validate-docker.sh",
    "docker:security": "./scripts/security-scan.sh",
    "docker:clean": "docker system prune -f",
    "security:env": "./scripts/security-check-env.sh",
    "security:all": "pnpm run security:env && pnpm run docker:security",
    "quality:complexity": "npx ts-complex --threshold 10 apps/backend/src/",
    "quality:audit": "pnpm audit --audit-level moderate",
    "quality:audit:fix": "pnpm audit fix",
    "quality:type-coverage": "npx type-coverage --at-least 95 --strict",
    "quality:docs": "npx typedoc --options typedoc.json",
    "quality:all": "pnpm run quality:complexity && pnpm run quality:audit && pnpm run quality:type-coverage",
    "quality:security": "./scripts/security-audit.sh",
    "monitoring:profile": "node --prof --enable-source-maps dist/index.js",
    "monitoring:analyze": "node --prof-process isolate-*.log > profile.txt",
    "monitoring:memory": "node --inspect --enable-source-maps dist/index.js",
    "monitoring:heap": "node --heap-prof --enable-source-maps dist/index.js",
    "monitoring:cpu": "node --cpu-prof --enable-source-maps dist/index.js",
    "docs:api": "npx swagger-ui-serve docs/api-specification.yaml",
    "docs:generate": "npx typedoc --options typedoc.json",
    "docs:serve": "npx http-server docs/api -p 3001 -o",
    "sast:biome": "mkdir -p security-reports && biome lint --reporter json --files apps/backend/src apps/backend/tests > security-reports/biome-results.json",
    "sast:all": "pnpm run sast:biome && pnpm run quality:security",
    "pre-commit:check": "pnpm run type-check && pnpm run lint && pnpm run test && pnpm run format:check",
    "pre-commit:fix": "pnpm run lint:fix && pnpm run format",
    "validate": "pnpm run type-check && pnpm run lint && pnpm run test",
    "validate:config": "node -e \"require('./dist/config/index.js'); console.log('âœ… Configuration is valid')\"",
    "validate:production": "./scripts/validate/validate-production-config.sh",
    "benchmark": "node --enable-source-maps scripts/benchmark.js",
    "benchmark:memory": "node --enable-source-maps --expose-gc scripts/benchmark-memory.js",
    "benchmark:startup": "tsx apps/backend/tests/performance/startup-benchmark.ts",
    "benchmark:memory-efficiency": "node --expose-gc --enable-source-maps -r tsx/esm apps/backend/tests/performance/memory-benchmark.ts",
    "benchmark:nodejs24": "vitest bench --config apps/backend/tests/performance/vitest.performance.config.ts",
    "benchmark:all": "pnpm run benchmark:startup && pnpm run benchmark:memory-efficiency && pnpm run benchmark:nodejs24",
    "test:performance-regression": "vitest --run apps/backend/tests/performance/performance-regression.test.ts",
    "test:performance-alerts": "vitest --run apps/backend/tests/monitoring/performance-alerts.test.ts",
    "performance:validate": "pnpm run test:performance-regression && pnpm run benchmark:all",
    "deploy": "./scripts/deploy/deploy-production.sh",
    "deploy:production": "./scripts/deploy/deploy-production.sh docker-compose",
    "deploy:production-cdn": "./scripts/deploy/deploy-production.sh docker-compose-cdn",
    "deploy:kubernetes": "./scripts/deploy/deploy-production.sh kubernetes",
    "deploy:aws-app-runner": "./scripts/deploy/deploy-production.sh aws-app-runner",
    "deploy:docker": "./scripts/deploy.sh docker",
    "deploy:docker-compose": "./scripts/deploy.sh docker-compose",
    "deploy:app-runner": "./scripts/deploy.sh app-runner",
    "rollback": "./scripts/rollback.sh",
    "rollback:docker": "./scripts/rollback.sh docker",
    "rollback:docker-compose": "./scripts/rollback.sh docker-compose",
    "rollback:app-runner": "./scripts/rollback.sh app-runner",
    "health-check": "./scripts/health-check.sh",
    "health-check:verbose": "./scripts/health-check.sh -v",
    "health-check:json": "./scripts/health-check.sh -j",
    "monitoring:start": "docker-compose -f monitoring/docker-compose.yml up -d",
    "monitoring:stop": "docker-compose -f monitoring/docker-compose.yml down",
    "monitoring:logs": "docker-compose -f monitoring/docker-compose.yml logs -f",
    "security:audit": "./scripts/security-audit.sh",
    "security:check": "pnpm audit --audit-level moderate",
    "security:fix": "pnpm audit --fix",
    "postinstall": "node -e \"if (process.env.NODE_ENV !== 'production' && !process.env.CI) { try { require('husky').install() } catch (e) {} }\""
  },
  "packageManager": "pnpm@10.20.0+sha512.cf9998222162dd85864d0a8102e7892e7ba4ceadebbf5a31f9c2fce48dfce317a9c53b9f6464d1ef9042cba2e02ae02a9f7c143a2b438cd93c91840f0192b9dd",
  "keywords": [
    "claude",
    "azure",
    "openai",
    "proxy",
    "api"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=24.0.0"
  },
  "dependencies": {
    "axios": "^1.13.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "express-rate-limit": "^8.2.1",
    "helmet": "^8.1.0",
    "joi": "^18.0.2",
    "openai": "^6.9.1",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.11.0",
    "@biomejs/biome": "^1.9.4",
    "@humanfs/node": "^0.16.7",
    "@playwright/test": "^1.57.0",
    "@swc/cli": "^0.7.9",
    "@swc/core": "^1.15.3",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.5",
    "@types/node": "^24.10.1",
    "@types/superagent": "^8.1.9",
    "@types/supertest": "^6.0.3",
    "@vitest/coverage-v8": "^4.0.14",
    "@vitest/ui": "^4.0.14",
    "concurrently": "^9.2.1",
    "glob": "^12.0.0",
    "http-server": "^14.1.1",
    "husky": "^9.1.7",
    "jiti": "^2.6.1",
    "lint-staged": "^16.2.7",
    "supertest": "^7.1.4",
    "swagger-ui-serve": "^0.0.4",
    "ts-complex": "^1.0.0",
    "tsx": "^4.20.6",
    "type-coverage": "^2.29.7",
    "typedoc": "^0.28.14",
    "typedoc-plugin-markdown": "^4.9.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.14"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,mjs,cjs,json,jsonc}": [
      "pnpm exec biome check --write"
    ]
  },
  "pnpm": {
    "overrides": {
      "js-yaml": "4.1.1",
      "body-parser": ">=2.2.1",
      "express": ">=5.2.0"
    },
    "onlyBuiltDependencies": [
      "@biomejs/biome",
      "@swc/core"
    ]
  }
}
