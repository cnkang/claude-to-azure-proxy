{
  "name": "@repo/frontend",
  "version": "2.0.0",
  "description": "React frontend for Claude-to-Azure OpenAI proxy service",
  "type": "module",
  "scripts": {
    "build": "vite build",
    "build:clean": "rm -rf dist && pnpm run build",
    "build:prod": "NODE_ENV=production vite build --mode production",
    "build:prod:optimized": "NODE_ENV=production VITE_BUILD_ANALYZE=true vite build --mode production",
    "build:prod:cdn": "NODE_ENV=production VITE_CDN_URL=${CDN_URL:-} vite build --mode production",
    "build:analyze": "NODE_ENV=production vite build --mode production && npx vite-bundle-analyzer dist/stats.html",
    "build:security-scan": "pnpm audit --audit-level moderate && pnpm run security:scan && pnpm run build:prod",
    "build:docker": "NODE_ENV=production vite build --mode production --outDir dist-docker",
    "build:cdn": "NODE_ENV=production VITE_CDN_URL=${CDN_URL} vite build --mode production",
    "build:staging": "NODE_ENV=production vite build --mode staging",
    "build:production": "NODE_ENV=production vite build --mode production --minify terser",
    "dev": "vite",
    "preview": "vite preview",
    "preview:prod": "vite preview --mode production",
    "test": "bash scripts/test-wrapper.sh",
    "test:direct": "NODE_OPTIONS='--max-old-space-size=4096 --expose-gc' vitest --no-coverage",
    "test:watch": "vitest --no-coverage",
    "test:coverage": "NODE_OPTIONS='--max-old-space-size=8192 --expose-gc' vitest run --config vitest.coverage.config.ts",
    "test:coverage:ci": "NODE_OPTIONS='--max-old-space-size=8192 --expose-gc' vitest run --config vitest.coverage.config.ts --reporter=json --reporter=html",
    "test:coverage:check": "NODE_OPTIONS='--max-old-space-size=8192 --expose-gc' vitest run --config vitest.coverage.config.ts && echo 'âœ… Coverage thresholds met (>80%)'",
    "test:ui": "vitest --ui",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "lint": "biome lint src",
    "lint:fix": "biome lint --write src",
    "type-check": "tsc --noEmit",
    "format": "biome format --write src",
    "format:check": "biome format src",
    "security:audit": "pnpm audit --audit-level moderate",
    "security:scan": "pnpm dlx @cyclonedx/cyclonedx-npm --output-file sbom.json"
  },
  "dependencies": {
    "@microsoft/fetch-event-source": "^2.0.1",
    "@radix-ui/react-alert-dialog": "^1.1.15",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-scroll-area": "^1.2.10",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-switch": "^1.2.6",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@repo/shared-types": "workspace:*",
    "@repo/shared-utils": "workspace:*",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "framer-motion": "^12.23.24",
    "i18next": "^25.6.3",
    "i18next-browser-languagedetector": "^8.2.0",
    "lucide-react": "^0.555.0",
    "prismjs": "^1.30.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-i18next": "^16.3.5",
    "react-router-dom": "^7.9.6",
    "react-window": "^2.2.3",
    "tailwind-merge": "^3.4.0",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@axe-core/playwright": "^4.11.0",
    "@axe-core/react": "^4.11.0",
    "@playwright/test": "^1.57.0",
    "@repo/shared-config": "workspace:*",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^24.10.1",
    "@types/prismjs": "^1.26.5",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "@vitejs/plugin-react-swc": "^4.2.2",
    "@vitest/coverage-v8": "^4.0.14",
    "@vitest/ui": "^4.0.14",
    "autoprefixer": "^10.4.22",
    "axe-core": "^4.11.0",
    "babel-plugin-react-remove-properties": "^0.3.1",
    "cssnano": "^7.1.2",
    "fast-check": "^4.3.0",
    "happy-dom": "^20.0.10",
    "object.entries": "^1.1.9",
    "object.fromentries": "^2.0.8",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.18",
    "terser": "^5.44.1",
    "typescript": "^5.9.3",
    "vite": "^7.2.4",
    "vitest": "^4.0.14"
  },
  "sideEffects": [
    "*.css",
    "*.scss",
    "src/i18n/**/*",
    "src/main.tsx"
  ],
  "engines": {
    "node": ">=24.0.0"
  },
  "packageManager": "pnpm@10.20.0"
}
