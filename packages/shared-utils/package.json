{
  "name": "@repo/shared-utils",
  "version": "2.0.0",
  "description": "Shared utility functions for the monorepo",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsc --build tsconfig.build.json",
    "build:clean": "tsc --build tsconfig.build.json --clean && pnpm run build",
    "test": "vitest",
    "test:watch": "vitest",
    "test:coverage": "vitest --coverage",
    "type-check": "tsc --noEmit --project tsconfig.build.json",
    "lint": "biome lint src tests",
    "lint:fix": "biome lint --write src tests"
  },
  "dependencies": {
    "@repo/shared-types": "workspace:*",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/uuid": "^10.0.0",
    "typescript": "^5.6.0",
    "vitest": "^4.0.4"
  },
  "files": ["dist"]
}
