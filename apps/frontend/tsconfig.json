{
  "extends": "../../packages/shared-config/typescript/react.json",
  "compilerOptions": {
    /* Override paths for this specific app */
    "baseUrl": ".",
    "target": "es2022",
    "lib": ["es2022", "DOM", "DOM.Iterable"],
    "paths": {
      "@/*": ["./src/*"],
      "@repo/shared-types": ["../../packages/shared-types/src"],
      "@repo/shared-utils": ["../../packages/shared-utils/src"],
      "jest-axe": ["./src/test/utils/jest-axe.ts"]
    },
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "types": ["vite/client", "node"]
  },
  "include": ["src/**/*", "vite.config.ts", "src/test/vitest-matchers.d.ts"],
  "exclude": ["node_modules", "dist", "coverage", "src/test/**"]
}
