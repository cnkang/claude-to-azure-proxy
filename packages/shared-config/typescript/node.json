{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./base.json",
  "compilerOptions": {
    /* Environment */
    "lib": ["ES2022"],
    "moduleResolution": "Bundler",
    "target": "ES2022",

    /* Node.js specific */
    "types": ["node"],
    "allowJs": true,
    "checkJs": false,

    /* Emit */
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./src",

    /* Module Resolution */
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@repo/shared-types": ["../../packages/shared-types/src"],
      "@repo/shared-utils": ["../../packages/shared-utils/src"]
    },

    /* Build */
    "incremental": true,
    "tsBuildInfoFile": "./dist/.tsbuildinfo",

    /* Advanced */
    "preserveWatchOutput": true,
    "pretty": true
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "coverage",
    "tests",
    "**/*.test.ts",
    "**/*.spec.ts"
  ],
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  }
}
